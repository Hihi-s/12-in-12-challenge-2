<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h4><%= pluralize(@post.errors.count, "errors") %> prevented this post from saving.</h4>
      <ul>
        <% @post.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  Title
  <br>
  <%= f.text_field :title %>
  <br>
  Description
  <br>
  <%= f.text_area :body %>
  <br>
  <br>
  <%= f.submit "Save Post", :disable_with => 'Submiting...' %>
<% end %>