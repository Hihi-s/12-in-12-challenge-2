<div id="page_wrapper">
  <h2>New post</h2>

  <%= form_for :post, url: posts_path do |f| %>
    Title
    <br>
    <%= f.text_field :title %>

    <br>
    Description
    <br>
    <%= f.text_area :body %>
    <br>
    <br>
    <%= f.submit "Save Post", :disable_with => 'Submiting...' %>
  <% end %>
</div>